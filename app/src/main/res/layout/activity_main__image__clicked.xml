<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Image_Clicked">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        android:titleTextColor="#ffffffff"/>

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="365dp"
        android:layout_height="640dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar2"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="512dp"
            android:layout_weight="1"
            tools:layout_editor_absoluteX="7dp"
            tools:layout_editor_absoluteY="54dp">

            <ImageView
                android:id="@+id/clickedImage"
                android:layout_width="match_parent"
                android:layout_height="301dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="36dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/side_nav_bar" />

            <CheckBox
                android:id="@+id/clickedLike"
                android:layout_width="108dp"
                android:layout_height="22dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/clickedImage"
                android:text="Likes: 0"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:id="@+id/clickedKomment"
                android:layout_width="103dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/clickedImage"
                android:text="Kommentar"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <LinearLayout
                android:id="@+id/underKomm"
                android:layout_width="match_parent"
                android:layout_height="141dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:orientation="vertical"
                android:visibility="visible">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.GridLayout
                        android:id="@+id/gridLayout"
                        android:layout_width="321dp"
                        android:layout_height="38dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:visibility="invisible">

                    </android.support.v7.widget.GridLayout>

                    <TextView
                        android:id="@+id/displayUser"
                        android:layout_width="99dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:text="@string/acc_name"
                        android:textAlignment="center"
                        android:textAppearance="@android:style/TextAppearance.Medium"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                    <EditText
                        android:id="@+id/editKomment"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="Name: Text"
                        android:textSize="14sp"
                        android:visibility="invisible" />

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/titel"
                android:layout_width="400dp"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Titel"
                android:textAlignment="center"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hashTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/clickedImage"
                android:layout_centerHorizontal="true"
                android:text="Hashtags"
                android:textAppearance="@android:style/TextAppearance.Medium" />

        </RelativeLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
